<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 평상시 -->
    <item android:state_focused="false" android:state_pressed="false">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <!-- 둘레 굴곡 정도-->
            <corners
                android:radius="15dp"
                />
            <!-- 그라데이션 -->
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#1EA896"
                android:startColor="#279BE8"
                android:endColor="#5EFF19"
                android:type="linear"
                />
            <size
                android:width="60dp"
                android:height="30dp"
                />
        </shape>

    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#1848A8"
                android:startColor="#1CE8C6"
                android:endColor="#47AFFF"
                android:type="linear"
                />
            <size
                android:width="60dp"
                android:height="40dp"
                />
        </shape>
    </item>

</selector>
