<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--상세 보기 버튼 눌렀을 때 -->
    <!-- 평상시 -->
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/calendar">

        <shape>
            <solid android:color="#99e7e7e7" />
            <corners android:radius="15dp" />
        </shape>

    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/checked">

        <shape>
            <solid android:color="#336633" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</selector>